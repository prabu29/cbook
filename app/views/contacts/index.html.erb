<script type="text/javascript">




$(document).ready(function()  {
    
    
   
        $("#search").keyup(function() { var firstname = $('#search').val(); 
         
           $.ajax({ 
            type:"get",
            url:"http://localhost:3000/contacts/ajax",
            data:'firstname='+firstname,

            success:function(result)  {
                
                  $("#ajaxshow").html("");
                  if($.trim(result)=="" || result==null)
                  {
                        $("#ajaxshow").append("doesn't matching search");
                        $("#ajaxshow").css({'color':'red'}); 
                  }
                  else
                  {
                       $("#ajaxshow").html("");

                        for (var i in result)
                        {
                          if($.trim(result).length==0)
                            $("#ajaxshow").append("doesn't matching search");
                          else
                            $("#ajaxshow").append('<a href="http://localhost:3000/contacts/'+result[i].id+'">'+result[i].firstname+' '+ result[i].lastname+'</a><br>');
                        }
                  }
                 
                  
                
              }});
        });
  });
  



